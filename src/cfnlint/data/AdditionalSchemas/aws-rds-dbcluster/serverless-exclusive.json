{
  "type": "object",
  "description": "When creating a serverless 'EngineMode' don't specify 'ScalingConfiguration'",
  "if": {
    "properties": {
      "EngineMode": {
        "pattern": "^((?!serverless).)*$"
      }
    }
  },
  "then": {
    "not": {
      "properties": {
        "ScalingConfiguration": {
          "type": "string"
        }
      },
      "required": ["ScalingConfiguration"]
    }
  },
  "else": {},
  "additionalProperties": true
}
