    },
    "update" : {
      "permissions" : [ "iot:UpdateAccountAuditConfiguration", "iot:DescribeAccountAuditConfiguration", "iam:PassRole" ]
    },
    "delete" : {
      "permissions" : [ "iot:DescribeAccountAuditConfiguration", "iot:DeleteAccountAuditConfiguration" ]
