      "minLength" : 12,
      "maxLength" : 12
    },
    "AuditCheckConfigurations" : {
      "$ref" : "#/definitions/AuditCheckConfigurations"
    },
    "AuditNotificationTargetConfigurations" : {
      "$ref" : "#/definitions/AuditNotificationTargetConfigurations"
