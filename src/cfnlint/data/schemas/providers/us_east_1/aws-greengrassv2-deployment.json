    },
    "Reset": {
     "insertionOrder": false,
     "items": {
      "maxLength": 256,
      "minLength": 0,
      "type": "string"
     },
     "type": "array"
    }
   },
   "type": "object"
  },
  "ComponentDeploymentSpecification": {
   "additionalProperties": false,
   "properties": {
