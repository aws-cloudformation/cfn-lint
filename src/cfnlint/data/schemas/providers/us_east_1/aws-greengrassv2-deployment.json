    "FailureType": {
     "enum": [
      "FAILED",
      "REJECTED",
      "TIMED_OUT",
      "ALL"
     ],
     "type": "string"
    },
    "MinNumberOfExecutedThings": {
     "maximum": 2147483647,
     "minimum": 1,
     "type": "integer"
    },
    "ThresholdPercentage": {
     "maximum": 100,
     "minimum": 0,
     "type": "number"
    }
   },
   "required": [
    "FailureType",
    "Action",
    "ThresholdPercentage",
    "MinNumberOfExecutedThings"
