     "type": "integer"
    },
    "Stat": {
     "type": "string"
    },
    "Unit": {
     "type": "string"
    }
   },
   "required": [
    "Stat",
    "Period",
    "Metric"
   ],
   "type": "object"
  },
  "Tag": {
   "additionalProperties": false,
   "properties": {
    "Key": {
     "maxLength": 128,
     "minLength": 1,
     "type": "string"
    },
    "Value": {
     "maxLength": 256,
     "minLength": 1,
     "type": "string"
    }
   },
   "required": [
    "Key",
    "Value"
   ],
   "type": "object"
  }
 },
