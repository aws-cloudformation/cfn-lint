     "items": {
      "$ref": "#/definitions/Dimension"
     },
     "type": "array",
     "uniqueItems": false
    },
    "MetricName": {
     "type": "string"
    },
    "Namespace": {
     "type": "string"
    }
   },
   "type": "object"
  },
  "MetricDataQuery": {
   "additionalProperties": false,
   "properties": {
    "AccountId": {
     "type": "string"
    },
    "Expression": {
     "type": "string"
    },
    "Id": {
     "pattern": "^([a-z])([A-Za-z0-9\\_]*)$",
     "type": "string"
    },
    "Label": {
     "type": "string"
    },
    "MetricStat": {
     "$ref": "#/definitions/MetricStat"
    },
    "Period": {
     "type": "integer"
    },
    "ReturnData": {
     "type": "boolean"
    }
   },
