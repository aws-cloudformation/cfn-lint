    }
   },
   "type": "object"
  },
  "S3Region": {
   "maxLength": 20,
   "minLength": 3,
   "type": "string"
  },
  "Target": {
   "additionalProperties": false,
   "properties": {
    "Key": {
     "pattern": "^[\\p{L}\\p{Z}\\p{N}_.:/=+\\-@]{1,128}$|resource-groups:Name",
     "type": "string"
    },
    "Values": {
     "items": {
      "type": "string"
