    "$ref": "#/definitions/AwsArn",
    "type": "string"
   },
   "type": [
    "string",
    "array"
   ]
  },
  "Statement": {
   "additionalProperties": false,
   "allOf": [
    {
     "oneOf": [
      {
       "required": [
        "Action"
       ]
      },
      {
       "required": [
        "NotAction"
       ]
      }
     ]
    },
    {
     "oneOf": [
      {
       "required": [
        "Resource"
       ]
      },
      {
       "required": [
        "NotResource"
       ]
      }
     ]
    }
   ],
   "properties": {
    "Action": {
     "$ref": "#/definitions/Action"
    },
    "Condition": {
     "$ref": "#/definitions/Condition"
    },
    "Effect": {
     "enum": [
      "Allow",
      "Deny"
     ],
     "type": "string"
    },
    "NotAction": {
     "$ref": "#/definitions/Action"
    },
    "NotPrincipal": {
     "$ref": "#/definitions/Principal"
    },
    "NotResource": {
     "$ref": "#/definitions/Resource"
    },
    "Principal": {
     "$ref": "#/definitions/Principal"
    },
    "Resource": {
     "$ref": "#/definitions/Resource"
    },
    "Sid": {
