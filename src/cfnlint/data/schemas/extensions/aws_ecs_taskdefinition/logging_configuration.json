{
 "description": "When 'awslogs' the options 'awslogs-group' and 'awslogs-region' are required",
 "if": {
  "properties": {
   "LogDriver": {
    "const": "awslogs"
   }
  },
  "required": [
   "LogDriver"
  ],
  "type": "object"
 },
 "then": {
  "properties": {
   "Options": {
    "propertyNames": {
     "enum": [
      "awslogs-datetime-format",
      "awslogs-group",
      "awslogs-multiline-pattern",
      "awslogs-region",
      "awslogs-stream-prefix",
      "max-buffer-size",
      "mode"
     ]
    },
    "required": [
     "awslogs-group",
     "awslogs-region"
    ],
    "type": "object"
   }
  },
  "required": [
   "Options"
  ]
 }
}
